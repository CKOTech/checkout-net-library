<Project Sdk="Microsoft.NET.Sdk">

  <!-- common NuGet package refs that affect all projects -->
  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45;net40</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AssemblyName>Checkout</AssemblyName>
    <RootNamespace>Checkout</RootNamespace>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="NETStandard.Library" Version="2.0.1" />
    <PackageReference Include="Newtonsoft.Json" Version="10.0.3" />
  </ItemGroup>
  <Import Project="..\Checkout.ApiClient.Shared\Checkout.ApiClient.Shared.projitems" Label="Shared" />

  <!-- .NET Standard 2.0 references, compilation flags and build options -->
  <PropertyGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <DefineConstants>NETCORE;NETSTANDARD;NETSTANDARD2_0</DefineConstants>
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.4.1" />
  </ItemGroup>

  <!-- .NET 4.0 and 4.5 references, compilation flags and build options -->
  <PropertyGroup Condition=" '$(TargetFramework)' == 'net40'">
    <DefineConstant>NET40</DefineConstant>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net45'">
    <DefineConstant>NET45</DefineConstant>
  </PropertyGroup>
  
  <ItemGroup Condition=" '$(TargetFramework)' == 'net40'  or '$(TargetFramework)' == 'net45'">
    <Reference Include="mscorlib" />
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Data" />
    <Reference Include="System.Web" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Security" />
    <Reference Include="System.Xml" />
    <Reference Include="System.Configuration" />
    <Reference Include="System.Net" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>

  <!-- .NET 4.0 references, compilation flags and build options -->
  <ItemGroup Condition="'$(TargetFramework)' == 'net40'">
    <PackageReference Include="Microsoft.Net.Http" Version="2.2.29" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="ApiServices\Cards\RequestModels\BaseCard.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Cards\RequestModels\CardCreate.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Cards\ResponseModels\Card.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Cards\ResponseModels\CardList.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\CustomerService.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\RequestModels\BaseCustomer.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\RequestModels\CustomerCreate.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\RequestModels\CustomerGetList.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\RequestModels\CustomerUpdate.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\ResponseModels\Customer.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\Customers\ResponseModels\CustomerList.cs">
      <SubType>Code</SubType>
    </Compile>
    <Compile Update="ApiServices\SharedModels\OkResponse.cs">
      <SubType>Code</SubType>
    </Compile>
  </ItemGroup>
</Project>